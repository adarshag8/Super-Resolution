{
    "name": "Super-Resolution",
    "n_gpu": 1,

    "arch": {
        "type": "FSRCNN",
        "args": {}
    },
    "data_loader": {
        "type": "dataloader",
        "args":{
            "image_dirs": ["traindata/BSDS100","traindata/BSDS200","traindata/General100","traindata/historical","traindata/PRIM/PIRM_Self-Val_set/HR"],
            "batch_size": 2,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "ssim", "PSNR"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
